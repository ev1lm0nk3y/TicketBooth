= form_for resource, as: resource_name, url: registration_path(resource_name),
  html: { method: :put } do |f|
  = render 'shared/form_errors', resource: resource

  %h2 Account Settings

  = f.label :name
  = f.text_field :name, maxlength: 70, required: true,
    class: 'input-xlarge'

  = f.label :email
  = f.email_field :email, placeholder: 'email@example.com', maxlength: 254,
    required: true, autofocus: true,
    class: 'input-xlarge'

  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    Currently waiting confirmation for:
    %strong= resource.unconfirmed_email

  = f.label :password do
    Password
    %p.muted Leave blank to keep the same
  = f.password_field :password, placeholder: 'Must be at least 8 characters',
    required: true, autocomplete: 'off',
    maxlength: 255, class: 'input-xlarge'

  = f.label :password_confirmation
  = f.password_field :password_confirmation, placeholder: '',
    maxlength: 255, required: true,
    class: 'input-xlarge'

  = f.label :current_password do
    Current password
    %p.muted Enter your current password to confirm your changes
  = f.password_field :current_password

  .actions
    = f.submit 'Update', class: 'btn btn-primary btn-large'

= link_to 'Back', :back
