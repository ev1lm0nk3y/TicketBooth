= form_for resource, as: resource_name, url: session_path(resource_name) do |f|

  %h2 Sign In

  = f.label :email, style: 'width: 100px;'
  = f.email_field :email, autofocus: true, placeholder: 'email@example.com', style: 'width: 200px;'
  = f.label :password, style: 'width: 100px;'
  = f.password_field :password, style: 'width: 200px;'

  - if devise_mapping.rememberable?
    = f.label :remember_me, class: 'checkbox' do
      = f.check_box :remember_me
      Remember me
  = f.submit 'Sign in', class: 'btn btn-primary btn-large'

= render 'users/shared/links'
