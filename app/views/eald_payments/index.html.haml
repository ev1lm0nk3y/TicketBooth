%h1 #{@event.name} Early Arrival / Late Departure Passes

.btn-group
  = link_to event_path(@event), class: 'btn' do
    %i.icon-arrow-left
    Event
  = link_to download_event_eald_payments_path(@event), class: 'btn btn-info hover-tooltip',
            title: 'Download a CSV of the current data set' do
    %i.icon-th-list
    Download CSV

%table.table
  %thead
    %tr
      %th Name
      %th Email
      %th Transaction ID
      %th Early Arrival Passes
      %th Late Departure Passes
  %tbody
    - @eald_payments.each do |payment|
      %tr
        %td= payment.name
        %td= payment.email
        %td= payment.stripe_charge_id
        %td= payment.early_arrival_passes
        %td= payment.late_departure_passes
