%h1= @event.name

%p
  %b Start Time:
  = @event.start_time

%p
  %b End Time:
  = @event.end_time

- if current_user.site_admin?
  = link_to events_path, class: 'btn' do
    %i.icon-arrow-left
    All Events
  = link_to event_jobs_path(@event), class: 'btn' do
    Jobs
    %i.icon-folder-open
  = link_to edit_event_path(@event), class: 'btn btn-primary' do
    Edit
    %i.icon-edit
